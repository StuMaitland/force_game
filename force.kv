#:kivy 1.0.9

<ForceIndicator>:
    size: 25, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size


<MaxIndicator>:
    size: 25, 10
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TargetIndicator>:
    size: 25, 10
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


<ForceGame>:
    digit0: digit0
    digit1: digit1
    digit2: digit2
    digit3: digit3
    digit4: digit4
    digit5: digit5

    max0: max0
    max1: max1
    max2: max2
    max3: max3
    max4: max4
    max5: max5

    target_ind:target_ind


    ForceIndicator:
        id: digit0
        x: root.x+100
        center_y: root.height

    ForceIndicator:
        id: digit1
        x: root.x + 50 * 1 +100
        center_y: root.height

    ForceIndicator:
        id: digit2
        x: root.x + 50 * 2 +100
        center_y: root.height

    ForceIndicator:
        id: digit3
        x: root.x + 50 * 3 +100
        center_y: root.height

    ForceIndicator:
        id: digit4
        x: root.x + 50 * 4 +100
        center_y: root.height

    ForceIndicator:
        id: digit5
        x: root.x + 50 * 5 +100
        center_y: root.height


    MaxIndicator:
        id: max0
        x: root.x +100
        center_y: root.height

    MaxIndicator:
        id: max1
        x: root.x+ 50 * 1 +100
        center_y: root.height

    MaxIndicator:
        id: max2
        x: root.x+ 50 * 2 +100
        center_y: root.height

    MaxIndicator:
        id: max3
        x: root.x+ 50 * 3 +100
        center_y: root.height

    MaxIndicator:
        id: max4
        x: root.x+ 50 * 4 +100
        center_y: root.height

    MaxIndicator:
        id: max5
        x: root.x+ 50 * 5 +100
        center_y: root.height

    TargetIndicator:
        id: target_ind
        height: 0

    Label:
        font_size: 70
        center_x: root.width * 0.75
        top: root.top - 50
        text: str(root.instruction)
